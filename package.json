{
  "name": "earnalliance-client",
  "version": "0.33.39",
  "description": "Earn Alliance api client",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "umd": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "author": "Earn Alliance",
  "license": "MIT",
  "homepage": "https://github.com/earn-alliance/earnalliance-client",
  "repository": {
    "type": "git",
    "url": "git@github.com:earn-alliance/earnalliance-client.git"
  },
  "bugs": {
    "url": "https://github.com/earn-alliance/earnalliance-client/issues"
  },
  "keywords": [
    "earnalliance"
  ],
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "esbuild": "^0.14.47",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.1",
    "jest-extended": "^2.0.0",
    "moq.ts": "^9.0.2",
    "msw": "^0.42.3",
    "node-fetch": "^2.6.7",
    "prettier": "^2.7.0",
    "rollup": "^2.75.7",
    "rollup-plugin-typescript2": "^0.32.1",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "tsconfig.json": "^1.0.11",
    "typedoc": "^0.22.17",
    "typedoc-github-wiki-theme": "^1.0.1",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.7.3"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "docs": "typedoc",
    "prepare": "yarn run build && husky install",
    "test": "jest --no-cache",
    "lint": "eslint 'src/**/*.{ts,tsx,json}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md,json}'",
    "patch": "npm version patch",
    "minor": "npm version minor"
  },
  "dependencies": {
    "@apollo/client": "^3.7.1",
    "@metamask/providers": "^10.2.0",
    "ethers": "^5.7.2",
    "firebase": "^9.13.0",
    "husky": "^8.0.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tests/tsconfig.tests.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>/tests/setup.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 150
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn",
      "@typescript-eslint/no-inferrable-types": "off"
    },
    "env": {
      "browser": true,
      "es2021": true
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage",
    "docs",
    "tests"
  ]
}
